BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.convert_miles_to_km()  # Update conversion in real-time
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.convert_miles_to_km()
        size_hint_y: None
        height: '48dp'
    Label:
        id: output_km
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)  # Yellow text color
        size_hint_y: None
        height: '48dp'
